<%- include('./partials/head.ejs') %>	

<body>
	<!-- Header -->
	<% if (locals.user != null) { %>
		<%- include('./partials/headerLogueado.ejs') %>
  <% } else { %>
		<%- include('./partials/headernoLogueado.ejs')	%>
  <% } %>  
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%- data.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%- data.usuario %> 
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= products.length %> productos</li>
						<li>200 seguidores</li>
						<li><%= data.comentarioUsuario.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < products.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= products[i].idProducto %>">
							<figure class="product-box_image">
								<img class="imgproducto" src= <%- products[i].imagen %> alt="imagen de la tapa de <%- products[i].nombreProducto %>">
							</figure>
							<article class="product-box_data">
								<h2><%- products[i].nombreProducto %></h2>
								<p><%- products[i].descripcion %></p>
								<p>Comentarios: <%= products[i].productoComentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>	
</html>