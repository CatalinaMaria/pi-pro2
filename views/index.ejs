<%- include('./partials/head.ejs') %>	

<body>
	<!-- Header -->

	<% if (user != null) { %>
		  <%- include('headerLogueado') 
	<% } else { %>
		  <%- include('headernoLogueado')	
	<% } %>  

	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < products.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= i %>">
							<figure class="product-box_image">
								<img class="imgproducto" src= <%- products[i].imagen %> alt="imagen de la tapa de <%- products[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%- products[i].nombre %></h2>
								<p><%- products[i].descripcion %></p>
								<p>Comentarios: <%- comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 4; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= i %>">
							<figure class="product-box_image">
								<img class="imgproducto" src= <%- products[i].imagen %> alt="imagen de la tapa de <%- products[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%- products[i].nombre %></h2>
								<p><%- products[i].descripcion %></p>
								<p>Comentarios: <%- comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>	
</html>