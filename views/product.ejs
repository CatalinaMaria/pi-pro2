<%- include('./partials/head.ejs') %>	

<body>
	<!-- Header -->
	<% if (locals.userLogueado != null) { %>
		<%- include('./partials/headerLogueado.ejs') %>
  <% } else { %>
		<%- include('./partials/headernoLogueado.ejs')	%>
  <% } %>  
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= products.nombreProducto %></h2> 
			
				<% if (locals.userLogueado != undefined && locals.userLogueado.id == products.clienteId) {%>
					<p class="product-detail-description"><a href="/products/editarproducto/<%= products.idProducto %>">Editar</a></p>
					<form action="/products/borrar/<%= products.idProducto %>" class="submit" method="post">
					<button type="submit" class="botonEliminar">Eliminar</button>
				</form>
					<%} %>
					
			
			
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src=<%- products.imagen %> alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%- products.descripcion %></p>
						<p class="product-detail-description">Subido por: <a href="/users/myprofile/<%=products.usuarioProducto.id%>"><%= products.usuarioProducto.email %></a> </p>
				</article>

				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let i = 0; i < products.productoComentarios.length; i++ )  { %>
							<article>
								<img src="/images/users/fotoperfil1.jpg" alt="">
								<div class="data">
									<p class="user">
										<strong> <a href="/users/myprofile/<%= products.productoComentarios[i].usuarioComentario.id %>"><%= products.productoComentarios[i].usuarioComentario.email %> </a>
										</strong> <%= products.productoComentarios[i].commentario %></p>

								</div>
							</article> <% } %>
				
					</section>
					<% if (locals.userLogueado != undefined) {%>
						<form class="form" action="/products/detalle/<%= products.idProducto %>" method="post">
							<input class="form-input" name="textocomentario" type="text" value="" placeholder="Agregar comentario">
							<button type="submit" class="buy-now-button">Agregar Comentario</button>
						</form>
						<%} else{%>
								<button type="submit" class="buy-now-button">Debe estar logueado para comentar</button>
							<%}%>
						
					<% if (locals.errors) { %>
						<p class="error"><%= errors.message %></p>
						<%} %>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->

</body>	
</html>