<%- include('./partials/head.ejs') %>	

<body>
	<!-- Header -->
	<% if (nombreDeUsuario != null) { %>
		<%- include('headerLogueado') 
  <% } else { %>
		<%- include('headernoLogueado')	
  <% } %>  
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 

					<form action="/users/myprofile" method="get" class="form-registro col-12">
						<div class="campos">
						<label for="" name="correo" class="" >Email:</label>
						<input type="email" name="mail" class="control" value="<%- usuarios.email %>">
						<label for="" name="user" class="" >Nombre de usuario:</label>
						<input type="text" name="usuario" class="control" value="<%- usuarios.nombre %>">
						<label for="" name="pass" class="">Contraseña:</label>
						<input type="contraseña" name="password" class="control" value="<%- usuarios.contrasenia %>">
						<label for="" name="día" class="">Fecha de nacimiento:</label>
						<input type="date" name="fecha" class="control" value="<%- usuarios.fechanacimiento %>">
						<label for="" name="dni" class="">DNI:</label>
						<input type="number" name="documento" class="control" value="<%- usuarios.dni %>">
						<label for="" name="foto" class="">Foto de perfil:</label>
						<input type="file" name="pic" class="control" value="<%- usuarios.fotoperfil %>">
						</div>
						<button class="boton" type="submit">Guardar cambios</button>
					</form>
				</div>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>