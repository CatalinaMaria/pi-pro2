						<input type="email" name="mail" value="">
						<label for="" class="user">Nombre de usuario:</label>
						<input type="text" name="usuario" value="">
						<label for="" class="pass">Contraseña:</label>
						<input type="contraseña" name="password" value="">
						<label for="" class="día">Fecha de nacimiento:</label>
						<input type="date" name="fecha" value="">
						<label for="" class="doc">DNI:</label>
						<input type="number" name="documento" value="">
						<label for="" class="foto">Foto de perfil:</label>
						<input type="text" name="pic" value="">
						</div>
						<button type="submit">Guardar cambios</button>
					</form>
				</div>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
